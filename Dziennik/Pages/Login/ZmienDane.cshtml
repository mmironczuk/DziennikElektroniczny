@page
@model Dziennik.Pages.Login.ZmienDaneModel
@{
	ViewData["Title"] = "MyAccount";

	if (Model.typUzytkownika == 1)
	{
		Layout = "_LayoutNauczyciel";
	}
	else if (Model.typUzytkownika == 2)
	{
		Layout = "_LayoutUczen";
	}
}

<br />
<br />
<div class="container card" style="text-align:center">
	<div class="row">
		<div class="col"></div>
		<div class="col-6">
			<h1>Edycja danych</h1>
			<form class="form-horizontal" method="post">
				<input asp-for="@Model.login" type="hidden" class="form-control">
				<div class="form-group">
					<div class="col-sm-12">
						<label class="control-label col-sm2">Stare hasło:</label>
						<input asp-for="@Model.passwordOld" class="form-control">
						<label class="control-label col-sm2">Nowe hasło:</label>
						<input asp-for="@Model.password" class="form-control">
						<label class="control-label col-sm2">Powtórz hasło:</label>
						<input asp-for="@Model.passwordConfirm" class="form-control">

						<button asp-route-id="1" class="btn btn btn-primary">Zmień hasło</button>
					</div>
				</div>
				<div class="form-group">
					<div class="col-sm-offset-2 col-sm-12">
						<label class="control-label col-sm2">Nowe email:</label>
						<input asp-for="@Model.email" class="form-control">
						<label class="control-label col-sm2">Powtórz email:</label>
						<input asp-for="@Model.emailConfirm" class="form-control">

						<button asp-route-id="2" class="btn btn btn-primary">Zmień email</button>
					</div>
				</div>
			</form>
		</div>
		<div class="col"></div>
	</div>
</div>
