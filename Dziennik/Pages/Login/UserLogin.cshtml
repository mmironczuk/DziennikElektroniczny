@page
@model Dziennik.Pages.Login.UserLoginModel
@{
    Layout = "_Layout";
    ViewBag.Title = "Logowanie";
    ViewBag.header = "Logowanie";
    ViewBag.fotter = "Michał Mirończuk PS4";
}
<div class="container">
    <form class="form-horizontal" method="post">
        <div class="form-group">
            <label asp-for="login" class="control-label"></label>
            <div class="col-sm-6">
                <input asp-for="login" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="password" class="control-label col-sm2"></label>
            <div class="col-sm-6">
                <input type="password" asp-for="password" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button class="btn btn btn-primary">Zatwierdź</button>
            </div>
        </div>
    </form>
</div>
