@page
@model Dziennik.Pages.Login.UserLoginModel
@{
    Layout = "_Layout";
    ViewBag.Title = "Logowanie";
    ViewBag.header = "Logowanie";
    ViewBag.fotter = "Michał Mirończuk PS4";
}
<br/>
<br/>
<div class="container card d-flex justify-content-center bg-light">
    <div class="row">
        <div class="col"></div>
        <div class="col-8">
            <center><h1 class="py-5">Zaloguj się</h1></center>
            <form class="form-horizontal" method="post">
                <div class="form-group">
                    <label asp-for="login" class="control-label"></label>
                    <div class="col-12">
                        <input asp-for="login" class="form-control">
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="password" class="control-label col-sm2"></label>
                    <div class="col-12">
                        <input type="password" asp-for="password" class="form-control">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col"></div>
                    <div class="col-sm-offset-2 col-4">
                        <button class="btn btn btn-primary col-12">Zatwierdź</button>
                    </div>
                    <div class="col"></div>
                </div>
            </form>
        </div>
        <div class="col"></div>
    </div>
</div>
