@page
@model Dziennik.Pages.EditWydarzeniaModel
@{
    Layout = "_LayoutNauczyciel";
    ViewData["Title"] = "Edycja Wydarzenia";
}
<br />
<br />
<div class="container card" style="text-align:center">
    <div class="row">
        <div class="col"></div>
        <div class="col-6">
            <h1>Edycja Wydarzenia</h1>
            <form class="form-horizontal" method="post">
                <div class="form-group">
                    <input asp-for="wydarzenie.Id_wydarzenia" type="hidden" />
                    <label class="control-label col-sm2">Nazwa:</label>
                    <div class="col-sm-12">
                        <input asp-for="wydarzenie.nazwa" class="form-control">
                        <span asp-validation-for="wydarzenie.nazwa" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm2">Opis wydarzenia:</label>
                    <div class="col-sm-12">
                        <input asp-for="wydarzenie.opis" class="form-control">
                        <span asp-validation-for="wydarzenie.opis" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm2">Data wydarzenia:</label>
                    <div class="col-sm-12">
                        <input asp-for="wydarzenie.data" type="date" class="form-control"/>
                        <span asp-validation-for="wydarzenie.data" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-12">
                        <button asp-route-id="1" class="btn btn btn-primary">Zatwierdź zmiany</button>
                        <button asp-route-id="2" class="btn btn btn-primary">Usuń wydarzenie</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col"></div>
    </div>
</div>
