@page
@model Dziennik.Pages.AddMarkModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    //Layout = "_Layout";
    ViewBag.Title = "Dodawanie oceny";
}
<br /><br />
<div class="container">
    <form class="form-horizontal" method="post">
        <input asp-for="ocena.iducznia" type="hidden" class="form-control">
        <div class="form-group">
            <label asp-for="ocena.mark" class="control-label col-sm2"></label>
            <div class="col-sm-6">
                <input asp-for="ocena.mark" class="form-control">
                <span asp-validation-for="ocena.mark" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ocena.opis" class="control-label col-sm2"></label>
            <div class="col-sm-6">
                <input asp-for="ocena.opis" class="form-control">
                <span asp-validation-for="ocena.opis" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button class="btn btn btn-primary">Zatwierdź</button>
            </div>
        </div>
    </form>
</div>