@page
@model Dziennik.Pages.AddMarkModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    //Layout = "_Layout";
    ViewBag.Title = "Dodawanie oceny";
}
<br /><br />
<div class="container">
    <form class="form-horizontal" method="post">
        <input asp-for="ocena.Id_ucznia" type="hidden" class="form-control">
        <div class="form-group">
            <label asp-for="ocena.ocena" class="control-label col-sm2"></label>
            <div class="col-sm-6">
                <select asp-for="ocena.ocena" class="form-control">
                    <option value="1">1</option>
                    <option value="1+">1+</option>
                    <option value="2-">2-</option>
                    <option value="2">2</option>
                    <option value="2+">2+</option>
                    <option value="3-">3-</option>
                    <option value="3">3</option>
                    <option value="3+">3+</option>
                    <option value="4-">4-</option>
                    <option value="4">4</option>
                    <option value="4+">4+</option>
                    <option value="5">5</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ocena.opis_oceny" class="control-label col-sm2"></label>
            <div class="col-sm-6">
                <input asp-for="ocena.opis_oceny" class="form-control">
                <span asp-validation-for="ocena.opis_oceny" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button class="btn btn btn-primary">Zatwierdź</button>
            </div>
        </div>
    </form>
</div>