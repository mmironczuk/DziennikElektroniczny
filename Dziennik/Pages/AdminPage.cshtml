@page
@model Dziennik.Pages.AdminPageModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_LayoutAdmin";
    ViewBag.Title = "Panel administracyjny";
}
<br />
<br />
<div class="container card d-flex justify-content-center bg-light">
    <form class="form-horizontal" method="post">
        <div class="form-group">
            <label class="control-label col-sm2">Login:</label>
            <div class="col-sm-6">
                <input asp-for="konto.login" class="form-control">
                <span asp-validation-for="konto.login" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm2">Hasło:</label>
            <div class="col-sm-6">
                <input asp-for="konto.haslo" class="form-control">
                <span asp-validation-for="konto.haslo" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm2">e-mail:</label>
            <div class="col-sm-6">
                <input asp-for="konto.email" class="form-control">
                <span asp-validation-for="konto.email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <input type="hidden" asp-for="konto.typ_uzytkownika" />
        </div>
        <div class="form-group">
            <label class="control-label col-sm2">Imię:</label>
            <div class="col-sm-6">
                <input asp-for="uczen.imie" class="form-control">
                <span asp-validation-for="uczen.imie" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm2">Nazwisko:</label>
            <div class="col-sm-6">
                <input asp-for="uczen.nazwisko" class="form-control">
                <span asp-validation-for="uczen.nazwisko" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm2">Adres:</label>
            <div class="col-sm-6">
                <input asp-for="uczen.adres" class="form-control">
                <span asp-validation-for="uczen.adres" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm2">Pesel:</label>
            <div class="col-sm-6">
                <input asp-for="uczen.pesel" class="form-control">
                <span asp-validation-for="uczen.pesel" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm2">Klasa:</label>
            <div class="col-sm-6">
                <select asp-for="uczen.Klasa.Id_klasy" class="form-control">
                    @foreach (var k in Model.klasy.ToList())
                    {
                        <option value="@k.Id_klasy">@k.nazwa</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button class="btn btn btn-primary">Zatwierdź</button>
            </div>
        </div>
    </form>
</div>