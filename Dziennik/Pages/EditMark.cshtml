@page
@model Dziennik.Pages.EditMarkModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    //Layout = "_Layout";
    ViewBag.Title = "Edycja oceny";
}
<br />
<br />
<div class="container">
    <form class="form-horizontal" method="post">
        <input asp-for="ocena.idoceny" type="hidden" class="form-control">
        <div class="form-group">
            <label asp-for="ocena.mark" class="control-label col-sm2"></label>
            <div class="col-sm-6">
                <select asp-for="ocena.mark" class="form-control">
                    <option value="1">1</option>
                    <option value="1+">1+</option>
                    <option value="2-">2-</option>
                    <option value="2">2</option>
                    <option value="2+">2+</option>
                    <option value="3-">3-</option>
                    <option value="3">3</option>
                    <option value="3+">3+</option>
                    <option value="4-">4-</option>
                    <option value="4">4</option>
                    <option value="4+">4+</option>
                    <option value="5">5</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ocena.opis" class="control-label col-sm2"></label>
            <div class="col-sm-6">
                <input asp-for="ocena.opis" class="form-control">
                <span asp-validation-for="ocena.opis" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                    <button asp-page-handler="OnPost" asp-route-id="0" class="btn btn btn-primary">Zatwierdź zmiany</button>
                    <button asp-page-handler="OnPost" asp-route-id="1" class="btn btn btn-primary">Usuń ocenę</button>
            </div>
        </div>
    </form>
</div>