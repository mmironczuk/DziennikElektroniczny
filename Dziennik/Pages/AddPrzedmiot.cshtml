@page
@model Dziennik.Pages.AddPrzedmiotModel
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "AddPrzedmiot";
}
<br /><br />
      <div class="container card d-flex justify-content-center bg-light" style="text-align:center">
          <div class="row">
              <div class="col"></div>
              <div class="col-6">
                  <center><h1 class="py-3">Dodawanie przedmiotu</h1></center>
                  <form class="form-horizontal" method="post">
                      <div class="form-group">
                          <label class="control-label col-sm2">Nazwa:</label>
                          <div class="col-sm-12">
                              <input asp-for="przedmiot.nazwa" class="form-control">
                              <span asp-validation-for="przedmiot.nazwa" class="text-danger"></span>
                          </div>
                      </div>
                      <div class="form-group">
                          <label class="control-label col-sm2">Dziedzina:</label>
                          <div class="col-sm-12">
                              <input asp-for="przedmiot.dziedzina" class="form-control">
                              <span asp-validation-for="przedmiot.dziedzina" class="text-danger"></span>
                          </div>
                      </div>
                      <div class="form-group">
                          <div class="col-sm-offset-2 col-sm-12">
                              <button class="btn btn btn-primary">Zatwierdź</button>
                          </div>
                      </div>
                  </form>
              </div>
              <div class="col"></div>
          </div>
      </div>

