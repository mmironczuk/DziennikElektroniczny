@page
@model Dziennik.Pages.AddNauczycielModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_LayoutAdmin";
    ViewBag.Title = "Panel administracyjny";
}
<br /><br />
      <div class="container card d-flex justify-content-center bg-light" style="text-align:center">
          <div class="row">
              <div class="col"></div>
              <div class="col-6">
                  <center><h1 class="py-xl-3">Dodawanie nauczyciela</h1></center>
                  <form class="form-horizontal" method="post">
                      <div class="form-group">
                          <label class="control-label col-sm2">Login:</label>
                          <div class="col-sm-12">
                              <input asp-for="konto.login" class="form-control">
                              <span asp-validation-for="konto.login" class="text-danger"></span>
                          </div>
                      </div>
                      <div class="form-group">
                          <label class="control-label col-sm2">Hasło:</label>
                          <div class="col-sm-12">
                              <input asp-for="konto.haslo" class="form-control">
                              <span asp-validation-for="konto.haslo" class="text-danger"></span>
                          </div>
                      </div>
                      <div class="form-group">
                          <label class="control-label col-sm2">e-mail:</label>
                          <div class="col-sm-12">
                              <input asp-for="konto.email" class="form-control">
                              <span asp-validation-for="konto.email" class="text-danger"></span>
                          </div>
                      </div>
                      <div class="form-group">
                          <input type="hidden" asp-for="konto.typ_uzytkownika" />
                      </div>
                      <div class="form-group">
                          <label class="control-label col-sm2">Imię:</label>
                          <div class="col-sm-12">
                              <input asp-for="nauczyciel.imie" class="form-control">
                              <span asp-validation-for="nauczyciel.imie" class="text-danger"></span>
                          </div>
                      </div>
                      <div class="form-group">
                          <label class="control-label col-sm2">Nazwisko:</label>
                          <div class="col-sm-12">
                              <input asp-for="nauczyciel.nazwisko" class="form-control">
                              <span asp-validation-for="nauczyciel.nazwisko" class="text-danger"></span>
                          </div>
                      </div>
                      <div class="form-group">
                          <label class="control-label col-sm2">Adres:</label>
                          <div class="col-sm-12">
                              <input asp-for="nauczyciel.adres" class="form-control">
                              <span asp-validation-for="nauczyciel.adres" class="text-danger"></span>
                          </div>
                      </div>
                      <div class="form-group">
                          <label class="control-label col-sm2">Pesel:</label>
                          <div class="col-sm-12">
                              <input asp-for="nauczyciel.pesel" class="form-control">
                              <span asp-validation-for="nauczyciel.pesel" class="text-danger"></span>
                          </div>
                      </div>
                      <div class="form-group">
                          <div class="col-sm-offset-2 col-sm-12">
                              <button class="btn btn btn-primary">Zatwierdź</button>
                          </div>
                      </div>
                  </form>
                  </div>
                  <div class="col"></div>
              </div>
              </div>
