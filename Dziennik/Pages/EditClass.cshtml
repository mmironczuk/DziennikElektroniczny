@page
@model Dziennik.Pages.EditClassModel
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Edycja nazwy klasy";
}

<br />
<br />
<div class="container card" style="text-align:center">
    <div class="row">
        <div class="col"></div>
        <div class="col-6">
            <h1>Edycja nazwy klasy</h1>
            <form class="form-horizontal" method="post">
                <div class="form-group">
                    <input asp-for="klasa.KlasaId" type="hidden" />
                    <label class="control-label col-sm2">Stara nazwa:</label>
                    <div class="col-sm-12">
                        <input asp-for="old_name" readonly class="form-control">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm2">Nowa nazwa:</label>
                    <div class="col-sm-12">
                        <input asp-for="klasa.nazwa" class="form-control">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-12">
                        <button asp-route-id="1" class="btn btn-success" style="margin:10px">Zatwierdź zmiany</button>
                        <button asp-route-id="2" class="btn btn-danger" style="margin:10px">Powrót</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col"></div>
    </div>
</div>