@page
@model Dziennik.Pages.WydarzenieModel
@{
    ViewData["Title"] = "Wydarzenie";
}

<h1>Wydarzenie</h1>
<div class="form-group">
    <label asp-for="wydarzenie.nazwa" class="control-label col-sm2"></label>
    <div class="col-sm-6">
        <input asp-for="wydarzenie.nazwa" class="form-control">
        <span asp-validation-for="wydarzenie.nazwa" class="text-danger"></span>
    </div>
</div>
<div class="form-group">
    <label asp-for="wydarzenie.opis" class="control-label col-sm2"></label>
    <div class="col-sm-6">
        <input asp-for="wydarzenie.opis" class="form-control">
        <span asp-validation-for="wydarzenie.opis" class="text-danger"></span>
    </div>
</div>
<div class="form-group">
    <label asp-for="wydarzenie.data" class="control-label col-sm2"></label>
    <div class="col-sm-6">
        <input asp-for="wydarzenie.data" class="form-control" type="datetime-local" data-val="true" 
               data-val-required="The DateTime field is required." id="DataTime" value="@Dziennik.Pages.WydarzenieModel.datka"> 
        <span asp-validation-for="wydarzenie.data" class="text-danger"></span>
    </div>
</div>
<div class="form-group">
    <label asp-for="wydarzenie.Klasa.nazwa" class="control-label col-sm2"></label>
    <div class="col-sm-6">
        <select asp-for="wydarzenie.Klasa.nazwa" class="form-control" id="nrKlasy">
                @foreach (Dziennik.Models.Klasa klass in Dziennik.Pages.WydarzenieModel.klasy)
                {
                    <option value="1">@klass.nazwa</option>
                }
        </select>
    </div>
</div>
<div class="form-group">
    <label asp-for="wydarzenie.Przedmiot.nazwa" class="control-label col-sm2"></label>
    <div class="col-sm-6">
        <select asp-for="wydarzenie.Przedmiot.nazwa" class="form-control" id="nrPrzedmiotu">
            @foreach (Dziennik.Models.Przedmiot przedmiot in Dziennik.Pages.WydarzenieModel.przedmioty)
            {
                <option value="1">@przedmiot.nazwa</option>
            }
        </select>
    </div>
</div>


