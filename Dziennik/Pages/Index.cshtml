@page
@model IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Home page";
}

<br />
<br />
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => Model.uczniowie_test[0].id)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => Model.uczniowie_test[0].name)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => Model.uczniowie_test[0].surname)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => Model.uczniowie_test[0].oceny)
            </th>
            <th scope="col">Akcja</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model.uczniowie_test.ToList())
        {
            <tr>
                <th scope="row">@Html.DisplayFor(m => p.id)</th>
                <td>@Html.DisplayFor(m => p.name)</td>
                <td>@Html.DisplayFor(m => p.surname)</td>
                <td>

                    @foreach (var u in p.oceny.ToList())
                    {
                        <a asp-page="./EditMark" asp-route-id="@u.idoceny" class="btn btn btn-primary">@Html.DisplayFor(m => u.mark)</a>
                    }
                </td>
                <td>
                    <a asp-page="AddMark" asp-route-id=@p.id>Dodaj ocenę</a>
                </td>
            </tr>
        }
    </tbody>
</table>