@page
@model Dziennik.Pages.ObecnosciListModel
@{
    Layout = "_LayoutUczen";
    ViewData["Title"] = "ObecnosciList";
}

<br />
<br />
<div class="card">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">
                    Przedmiot
                </th>
                <th scope="col">
                    Nieobecności / spóźnienia
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model.przedmioty.ToList())
            {
                <tr>
                    <td>@p.nazwa</td>
                    <td>
                        @foreach (var o in Model.obecnosci.ToList())
                        {
                            if (o.Lekcja.Nauczanie.Przedmiot.PrzedmiotId == p.PrzedmiotId)
                            {
                                if (o.typ_obecnosci == 1)
                                {<span>&nbsp;<a asp-page="./DetailsObecnosc" asp-route-id="@o.ObecnoscId" class="btn btn btn-primary">nb</a></span>}
                                if (o.typ_obecnosci == 2)
                                {<span>&nbsp;<a asp-page="./DetailsObecnosc" asp-route-id="@o.ObecnoscId" class="btn btn btn-primary">sp</a></span>}
                                if (o.typ_obecnosci == 3)
                                {<span>&nbsp;<a asp-page="./DetailsObecnosc" asp-route-id="@o.ObecnoscId" class="btn btn btn-primary">usp</a></span>}
                            }
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

