@page
@model Dziennik.Pages.UsersListModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Home page";
    Layout = "_LayoutNauczyciel";
}

<br />
<br />
<div class="card">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => Model.uczniowie[0].imie)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => Model.uczniowie[0].nazwisko)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => Model.uczniowie[0].Ocena)
                </th>
                <th scope="col">Akcja</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model.uczniowie.ToList())
            {
                <tr>
                    <td>@Html.DisplayFor(m => p.imie)</td>
                    <td>@Html.DisplayFor(m => p.nazwisko)</td>
                    <td>
                        @foreach (var u in p.Ocena.ToList())
                        {
                            <a asp-page="./EditMark" asp-route-id="@u.Id_oceny" asp-route-class_id="@Model.classId" asp-route-subject_id="@Model.subjectId" class="btn btn btn-primary">@Html.DisplayFor(m => u.ocena)</a>
                        }
                    </td>
                    <td>
                        <a asp-page="AddMark" asp-route-UczenId="@p.Id_ucznia" asp-route-ClassId="@Model.classId" asp-route-SubjectId="@Model.subjectId">Dodaj ocenę</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>